{
  "compilerOptions": {
    "rootDir": "packages/amplify-api-next/src",
    "outDir": "lib-esm",
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": ["packages/amplify-api-next/src/**/*.ts"],
  "exclude": [
    "node_modules",
    "packages/amplify-apackages/amplify-api-next/playgrounds/**/*_/**/*",
    "playgrounds/**/*"
  ]
}
