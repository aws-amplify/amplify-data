{
  "compilerOptions": {
    // For default imports:
    "esModuleInterop": true,
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "node",
    "rootDir": "./",
    // For importing `amplify_outputs.json`:
    "resolveJsonModule": true,
    // Prevents `Type 'string' is not assignable to type 'string[]'`:
    "strict": true
  },
  "include": ["./global.d.ts"],
  "exclude": ["node_modules"]
}
