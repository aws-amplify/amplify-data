{
    "compilerOptions": {
      "lib": ["dom", "es2019", "es2020"],
      "target": "es2020",
      "allowJs": false,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "incremental": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "noErrorTruncation": true,
      "module": "esnext",
      "moduleResolution": "bundler",
      "paths": {
        "@/*": ["./*"]
      }
    },
    "exclude": ["node_modules"],
    "include": ["src"]
  }