{
  "compilerOptions": {
    "rootDir": "src", 
    "outDir": "lib-esm", 
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "emitDeclarationOnly": true,
  },
  "exclude": ["**/node_modules", "**/lib-esm"]
}
