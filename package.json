{
  "name": "amplify-api-next-monorepo",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/aws-amplify/amplify-api-next.git"
  },
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:clean": "turbo run clean && rimraf node_modules && npm run delete-cache",
    "check": "npm run build && npm run test && npm run lint && npm run check:api && npm run check:type-perf",
    "check:api": "turbo run check:api",
    "check:type-perf": "tsx scripts/check-ts-benches.ts",
    "check:package-lock": "tsx scripts/check-package-lock.ts",
    "docs": "turbo run docs",
    "test": "turbo run test && npm run test:scripts",
    "test:scripts": "npx jest scripts/",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "turbo": "turbo",
    "delete-cache": "find . -type d \\( -name .turbo -o -name .rollup.cache \\) -exec rm -rf {} +",
    "baseline:benchmarks": "npm run --prefix ./packages/benches baseline:all",
    "publish:release": "changeset version && changeset publish",
    "publish:preid": "changeset version --snapshot ${PREID_PREFIX} && changeset publish --tag ${PREID_PREFIX}",
    "publish:local": "npm_config_registry=http://localhost:4873/ npm run publish:release",
    "publish:verdaccio": "npm_config_registry=http://localhost:4873/ npm run publish:release",
    "prepare": "husky"
  },
  "devDependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@aws-amplify/adapter-nextjs": "^1.2.1",
    "@changesets/cli": "^2.26.2",
    "@microsoft/api-documenter": "^7.23.37",
    "@microsoft/api-extractor": "^7.42.3",
    "@tsd/typescript": "^5.1.6",
    "@types/jest": "29.5.4",
    "@types/node": "^18.15.11",
    "@types/prettier": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "aws-amplify": "^6.3.1",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsdoc": "^46.8.2",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "execa": "^9.2.0",
    "glob": "^10.3.10",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-tsd": "^0.2.2",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "tsx": "^4.8.2",
    "turbo": "^1.10.14",
    "typescript": "^5.1.6"
  }
}
