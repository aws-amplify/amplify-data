{
  "name": "amplify-api-next-monorepo",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/aws-amplify/amplify-api-next.git"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:clean": "turbo run clean && rimraf node_modules",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "turbo": "turbo",
    "publish-packages": "changeset version && changeset publish",
    "publish-packages:local": "npm_config_registry=http://localhost:4873/ npm run publish-packages"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@tsd/typescript": "^5.1.6",
    "@types/jest": "29.5.4",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "eslint": "^8.50.0",
    "eslint-config-standard-with-typescript": "^39.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "jest-tsd": "^0.2.2",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "turbo": "^1.10.14",
    "typescript": "^5.2.2"
  }
}
